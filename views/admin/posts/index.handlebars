<h1>ALL POSTS</h1>

<div class="add_new_post">
    <a style="margin-bottom: 20px" href="/admin/posts/create" class="btn btn-success pull-right">Add New</a>
</div>
<table style="" class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Image</th>
        <th>Title</th>
        <th>Status</th>
        <th>Allow Comments</th>
        <th>Date</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each posts}}
    <tr>
        <td>{{id}}</td>
        <td>
            <img class="img-responsive" height="50" src="/uploads/{{file}}" alt="{{file}}">
        </td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td style="text-align: center">{{allowComments}}</td>
        <td>{{GenerateTime date 'MMM Do YYYY'}}</td>
        <td>
            <a href="/admin/posts/edit/{{id}}" class="btn btn-warning">EDIT</a>
        </td>
        <td>
            <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                <button class="btn btn-danger" type="submit">DELETE</button>
            </form>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>